use_frameworks!
inhibit_all_warnings!
source 'https://cdn.cocoapods.org/'
workspace 'MLS'

# // MARK: - Example projects

target 'MLS' do
  platform :ios, '11.0'
  pod 'MLSSDK', :path => '..'
  pod 'MLSSDK/IMA', :path => '..'
  pod 'MLSSDK/Cast', :path => '..'
  pod 'MLSSDK/Annotations', :path => '..'
end

target 'MLS-tvOS' do
  platform :tvos, '11.0'
  pod 'MLSSDK', :path => '..'
  pod 'MLSSDK/IMA', :path => '..'
  pod 'MLSSDK/Annotations', :path => '..'
end


